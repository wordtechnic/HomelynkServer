<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.homelynk"
	name="HomeLYnk Server"
	version="0.0.2"
	provider-name="Bořek Regent">
	<requires>
		<import addon="xbmc.python" version="2.1.0"/>
	</requires>
	<extension
		point="xbmc.service"
		library="addon.py"
		start="startup">
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="cs">Event Server pro HomeLYnk</summary>
		<summary lang="en">Event Server for HomeLYnk</summary>
		<description lang="cs">Tento doplnek umoznuje ovládat svetla a dalsi pristroje odesíláním akcí playeru do systému HomeLYnk</description>
		<description lang="en">This extension allows to control lights and other devices by sending commands on various player actions to the home automation system HomeLYnk.</description>
		
		<platform>all</platform>
